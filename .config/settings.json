{
  "editor.smoothScrolling": true,
  "editor.cursorSurroundingLines": 8,
  "editor.mouseWheelZoom": true,
  "code-runner.clearPreviousOutput": true,
  "code-runner.runInTerminal": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "code-runner.saveFileBeforeRun": true,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.iconTheme": "ayu",
  "[html]": {
    "editor.defaultFormatter": "j69.ejs-beautify"
  },
  "liveServer.settings.donotShowInfoMsg": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "scm.diffDecorationsGutterVisibility": "hover",
  "scm.diffDecorations": "gutter",
  "git.autofetch": true,
  "php.validate.executablePath": "",
  "terminal.integrated.defaultProfile.linux": "bash",
  "launch": {
    "configurations": [],
    "compounds": []
  },
  "git.openRepositoryInParentFolders": "never",
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "github.copilot.editor.enableAutoCompletions": true,
  "codeium.enableCodeLens": false,
  "workbench.editor.scrollToSwitchTabs": true,
  "editor.minimap.enabled": false,
  "workbench.editor.editorActionsLocation": "titleBar",
  "window.menuBarVisibility": "toggle",

  "editor.lineNumbers": "relative",

  // shiny shiny
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.color": "#D48EF9",
  "vim.highlightedyank.duration": 100,
  "vim.easymotion": true,
  "vim.enableNeovim": true,
  "vim.incsearch": true,
  "vim.hlsearch": true,
  "vim.useSystemClipboard": true,
  "vim.leader": "<Space>",
  "vim.insertModeKeyBindings": [
    {
      "before": ["k", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "c"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    // switch b/w buffers
    {
      "before": ["<S-h>"],
      "commands": [":bprevious"]
    },
    {
      "before": ["<S-l>"],
      "commands": [":bnext"]
    },

    // scrolling like a master
    {
      "before": ["<S-j>"],
      "commands": [
        {
          "command": "editorScroll",
          "args": {
            "to": "down",
            "by": "line",
            "revealCursor": true,
            "value": 8
          }
        }
      ]
    },
    {
      "before": ["<S-k>"],
      "commands": [
        {
          "command": "editorScroll",
          "args": {
            "to": "up",
            "by": "line",
            "revealCursor": true,
            "value": 8
          }
        }
      ]
    },
    // VSCode habits
    {
      "before": ["<C-a>"],
      "after": ["g", "g", "V", "G"]
    },
    {
      "before": ["<C-x>"],
      "after": ["d", "d"]
    },
    // Alt Ctrl Up and Down
    // Space D to highlight next word

    // { "before": ["leader", "v"], "commands": [":vsplit"] },
    // { "before": ["leader", "s"], "commands": [":split"] },

    // panes
    // {
    //   "before": ["leader", "h"],
    //   "commands": ["workbench.action.focusLeftGroup"]
    // },
    // {
    //   "before": ["leader", "j"],
    //   "commands": ["workbench.action.focusBelowGroup"]
    // },
    // {
    //   "before": ["leader", "k"],
    //   "commands": ["workbench.action.focusAboveGroup"]
    // },
    // {
    //   "before": ["leader", "l"],
    //   "commands": ["workbench.action.focusRightGroup"]
    // },
    // NICE TO HAVE
    // { "before": ["leader", "s"], "commands": [":w!"] },
    // { "before": ["leader", "w"], "commands": [":q!"] },
    { "before": ["leader", "x"], "commands": [":x!"] },
    {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["]", "d"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["<leader>", "c", "a"],
      "commands": ["editor.action.quickFix"]
    },
    { "before": ["leader", "p"], "commands": ["workbench.action.quickOpen"] },
    {
      "before": ["g", "h"],
      "commands": ["editor.action.showDefinitionPreviewHover"]
    }
  ],

  "vim.visualModeKeyBindings": [
    // Stay in visual mode while indenting
    { "before": ["<"], "commands": ["editor.action.outdentLines"] },
    { "before": [">"], "commands": ["editor.action.indentLines"] },

    // Move selected lines while staying in visual mode
    { "before": ["J"], "commands": ["editor.action.moveLinesDownAction"] },
    { "before": ["K"], "commands": ["editor.action.moveLinesUpAction"] },

    {
      "before": ["p"],
      "after": ["p", "g", "v", "y"]
    }
  ],
  "workbench.sideBar.location": "right",
  "terminal.integrated.fontFamily": "'FiraCode Nerd Font'",
  "terminal.integrated.enableImages": true,
  "editor.fontLigatures": true,
  "editor.fontFamily": "'FiraCode Nerd Font'",
  "window.restoreFullscreen": true,
  "window.newWindowDimensions": "inherit",
  "editor.stickyScroll.enabled": false,
  "workbench.activityBar.location": "hidden",
  "editor.formatOnSave": true,
  "workbench.colorTheme": "GitHub Dark",
  "workbench.statusBar.visible": false,
  "material-icon-theme.activeIconPack": "react",
  "js-beautify.wrap_attributes_indent_size": 2,
  "breadcrumbs.enabled": false
}
