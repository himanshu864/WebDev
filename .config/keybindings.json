//Place your key bindings in this file to override the defaults
[
  {
    "key": "ctrl+shift+/",
    "command": "code-runner.run"
  },
  {
    "key": "ctrl+alt+n",
    "command": "-code-runner.run"
  },
  {
    "key": "ctrl+shift+'",
    "command": "workbench.action.terminal.kill"
  },
  {
    "key": "ctrl+alt+/",
    "command": "livePreview.start.preview.atFile"
  },
  {
    "key": "ctrl+alt+'",
    "command": "livePreview.end"
  },
  {
    "key": "ctrl+alt+.",
    "command": "livePreview.start.externalPreview.atFile"
  },

  // NAVIGATION
  {
    "key": "alt+a",
    "command": "workbench.action.terminal.focusNext",
    "when": "terminalFocus"
  },
  {
    "key": "alt+j",
    "command": "workbench.action.togglePanel"
  },
  {
    "key": "alt+n",
    "command": "workbench.action.terminal.new",
    "when": "terminalFocus"
  },

  // FILE TREE
  // switch to Alt n for open. Alt e for file focus. Tab at files for preview
  {
    "command": "workbench.action.toggleSidebarVisibility",
    "key": "alt+e"
  },
  {
    "command": "workbench.files.action.focusFilesExplorer",
    "key": "alt+e",
    "when": "editorTextFocus"
  },
  {
    "key": "n",
    "command": "explorer.newFile",
    "when": "filesExplorerFocus && !inputFocus"
  },
  {
    "command": "renameFile",
    "key": "r",
    "when": "filesExplorerFocus && !inputFocus"
  },
  {
    "key": "ctrl+shift+n",
    "command": "explorer.newFolder",
    "when": "explorerViewletFocus"
  },
  {
    "command": "deleteFile",
    "key": "d",
    "when": "filesExplorerFocus && !inputFocus"
  },

  // NAVIGATE SUGGESTIONS
  {
    "key": "alt+j",
    "command": "selectNextSuggestion",
    "when": "suggestWidgetVisible"
  },
  {
    "key": "alt+k",
    "command": "selectPrevSuggestion",
    "when": "suggestWidgetVisible"
  },
  {
    "key": "alt+j",
    "command": "workbench.action.quickOpenSelectNext",
    "when": "inQuickOpen"
  },
  {
    "key": "alt+k",
    "command": "workbench.action.quickOpenSelectPrevious",
    "when": "inQuickOpen"
  },

  // brain-dead keybindings
  {
    "key": "alt+w",
    "command": "workbench.action.closeActiveEditor"
  },
  {
    "key": "alt+s",
    "command": "workbench.action.files.save"
  },
  {
    "key": "alt+t",
    "command": "workbench.action.reopenClosedEditor"
  },

  // sensitive scrolling
  {
    "key": "ctrl+j",
    "command": "editorScroll",
    "args": {
      "to": "down",
      "by": "line",
      "value": 8
    }
  },
  {
    "key": "ctrl+k",
    "command": "editorScroll",
    "args": {
      "to": "up",
      "by": "line",
      "value": 8
    }
  }
]
