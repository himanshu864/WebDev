<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>E-commerce</title>
    <link rel="stylesheet" href="/style/home.css" />
  </head>
  <body>
    <nav>
      <a href="/">
        <h1>E-Commerce Website</h1>
      </a>
      <a href="/cart">
        <img src="/images/cart.png" alt="cart" />
      </a>
    </nav>

    <section>
      <% items.forEach(item => { %>
      <div class="item">
        <img src="<%=item.image %>" alt="<%= item.alt%>" height="200px" />
        <p><%= item.name %></p>
        <b><span class="price"><%= item.price %></span></b>

        <form class="pay-form">
          <input type="hidden" name="name" value="<%= item.name %>" />
          <input type="hidden" name="price" value="<%= item.price %>" />
          <input type="hidden" name="image" value="<%= item.image %>" />
          <button type="submit">Add</button>
        </form>
      </div>
      <% }) %>
    </section>
  </body>

  <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="script/ajaxPayGateway.js"></script>
  <script>
    // Fomatting price dynamically
    function formatPrice(price) {
      return new Intl.NumberFormat("en-IN", {
        style: "currency",
        currency: "INR",
      }).format(price);
    }

    document.querySelectorAll(".price").forEach((span) => {
      span.innerHTML = formatPrice(span.innerHTML);
    });
  </script>
</html>
