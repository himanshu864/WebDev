<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>E-commerce</title>
  <link rel="stylesheet" href="/style/homeGPT.css">
</head>

<body>
  <!-- Navigation Bar -->
  <nav>
    <div class="container">
      <a href="/" class="logo">E-Commerce</a>
      <a href="/cart" class="cart">
        <img src="/images/cart.png" alt="Cart" />
      </a>
    </div>
  </nav>

  <!-- Main Content -->
  <main>
    <section class="product-grid">
      <% items.forEach(item => { %>
      <div class="item-card">
        <img src="<%= item.image %>" alt="<%= item.alt %>" class="item-image" />
        <div class="item-info">
          <h3><%= item.name %></h3>
          <p class="price"><%= item.price %></p>
        </div>
        <form action="/addToCart" method="post" class="add-to-cart-form">
          <input type="hidden" name="name" value="<%= item.name %>" />
          <input type="hidden" name="price" value="<%= item.price %>" />
          <input type="hidden" name="image" value="<%= item.image %>" />
          <input type="number" name="quantity" value="1" min="1" class="quantity-input" />
          <button type="submit" class="add-to-cart-btn">Add to Cart</button>
        </form>
      </div>
      <% }) %>
    </section>
  </main>

  <script>
    // Formatting price dynamically
    function formatPrice(price) {
      return new Intl.NumberFormat("en-IN", {
        style: "currency",
        currency: "INR"
      }).format(price);
    }

    document.querySelectorAll(".price").forEach(span => {
      span.innerHTML = formatPrice(span.innerHTML);
    });
  </script>
</body>

</html>