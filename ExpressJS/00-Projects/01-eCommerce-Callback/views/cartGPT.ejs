<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cart</title>
  <link rel="stylesheet" href="/style/cartGPT.css">
</head>

<body>
  <!-- Navigation Bar -->
  <nav>
    <div class="container">
      <a href="/" class="logo">E-Commerce</a>
      <a href="/cart" class="cart">
        <img src="/images/cart.png" alt="Cart" />
      </a>
    </div>
  </nav>

  <!-- Main Content -->
  <main>
    <% if (!locals.items) { %>
    <p class="empty-cart-message">Your cart is empty.</p>
    <% } else { %>
    <section class="cart-grid">
      <% items.forEach(item => { %>
      <div class="cart-item-card">
        <img src="<%= item.image %>" alt="<%= item.alt %>" class="cart-item-image" />
        <div class="cart-item-info">
          <h3><%= item.name %></h3>
          <p class="price"><%= item.price %> Ã— <%= item.quantity %></p>
        </div>
      </div>
      <% }) %>
    </section>
    <div class="total">
      <h2>Total Payment: <span class="total-price"><%= totalPrice %></span></h2>
      <form class="pay-form">
        <input type="hidden" name="name" value="Items" />
        <input type="hidden" name="price" value="<%= totalPrice %>" />
        <input type="hidden" name="image" value="Items" />
        <button type="submit" class="proceed-btn">Proceed to Buy</button>
      </form>
    </div>
    <% } %>
  </main>

  <script>
    // Formatting total price dynamically
    function formatPrice(price) {
      return new Intl.NumberFormat("en-IN", {
        style: "currency",
        currency: "INR"
      }).format(price);
    }

    document.querySelectorAll(".total-price").forEach(span => {
      span.innerHTML = formatPrice(span.innerHTML);
    });
  </script>
</body>

</html>